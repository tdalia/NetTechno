@model CustomerQueryWebAPI.ViewModels.SurveyViewModel

<h4>Rate the Solution</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-action="postSolutionSurvey">
            <input asp-for="CustomerId" class="form-control" type="hidden" />
            <input asp-for="EmployeeId" class="form-control" type="hidden" />
            <input asp-for="QueryId" class="form-control" type="hidden" />

            <div class="form-group">
                <h4> Rate Solution provided by '@ViewBag.EmpName' for Query Id @Model.QueryId </h4>
            </div>
            <div class="form-group col-md-4">
                <input asp-for="Ratings" class="form-control" min="1" max="5" step="1" />
                <span asp-validation-for="Ratings" class="text-danger"></span>
            </div>
            <br /><br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-star"></i> Rate
                </button>
                <a asp-controller="customer" asp-action="Index" class="btn btn-info" title="Back">
                    <i class="fa fa-reply"> Back</i>
                </a>
            </div>
        </form>
    </div>
</div>


<div class="warning">
    @ViewBag.Error
</div>
