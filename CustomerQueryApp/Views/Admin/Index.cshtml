@model IEnumerable<CustomerQueryWebAPI.ViewModels.EmployeeViewModel>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    CustomerQueryApp.ViewModels.LoginViewModel lvm = (CustomerQueryApp.ViewModels.LoginViewModel)ViewData["LoggedUser"];
}    

<h2>Admin Home</h2>
<div class="pull-right">
    <a asp-controller="Employee" asp-action="Index" class="btn btn-info"><i class="fa fa-reply"></i> Back to Employee Portal</a>
</div>

<h4>List of Employees</h4>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpAvgRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
            <th>
                <a asp-controller="Employee" asp-action="AddOrEdit" class="btn btn-success"> <i class="far fa-plus-square"></i>Employee</a>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpAvgRating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptName)
                </td>
                <td>
                    <a asp-controller="Employee" asp-action="AddOrEdit" asp-route-id="@item.EmployeeId"><i class="fa fa-marker fa-lg" title="Edit"></i> </a> |
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.EmployeeId" class="text-danger ml-1"
                       onclick="return confirm('Are you sure to delete this record ?')">
                        <i class="fas fa-trash-alt fa-lg" title="Delete"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
