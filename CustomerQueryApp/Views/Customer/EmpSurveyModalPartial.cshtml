@model CustomerQueryWebAPI.ViewModels.SurveyViewModel

<!-- Modal -->

<div class="modal fade" id="add-EmpSurvey" tabindex="-1" role="dialog" aria-labelledby="addEmpSurveyLabel" aria-hidden="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addEmpSurveyLabel">Add Solution Rating</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label asp-for="Ratings" class="control-label"></label>
                        <input asp-for="Ratings" class="form-control" min="1" max="5" step="1" />
                        <span asp-validation-for="Ratings" class="text-danger"></span>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save</button>
            </div>

        </div>
    </div>

</div>
