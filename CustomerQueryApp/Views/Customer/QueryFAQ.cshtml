@{
    ViewData["Title"] = "Query FAQ";
}

<h3>Query FAQ</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-action="queryFaqDept">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <br />
            <table>
                <tr>
                    <td><h4>@Html.DisplayNameFor(item => Model.DeptId)</h4></td>
                    <td>
                        <select asp-for="DeptId" class="form-control" asp-items="ViewBag.DeptId"></select>
                        <span asp-validation-for="DeptId" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><input type="hidden" /></td>
                    <td colspan="6" class="pull-right">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Look Up
                        </button>
                        <a asp-controller="customer" asp-action="Index" class="btn btn-info" title="Back"><i class="fa fa-reply"> </i> Back</a>
                    </td>
                </tr>
            </table>
            <!--
               <div class="form-row">
                      <div class="form-group col-md-6">
           <h5>Html.DisplayNameFor(item => Model.DeptId)</h5>
           <select asp-for="DeptId" class="form-control" asp-items="ViewBag.DeptId"></select>
           <span asp-validation-for="DeptId" class="text-danger"></span>
       </div>

               <div class="form-group col-md-6 ">
                   <input type="submit" value="Look Up" class="btn btn-primary" />
                   <input type="button" value="Back" class="btn btn-info" />
               </div>
           </div>-->
        </form>
    </div>
</div>

<br/>
<p class="form-row text-danger">
    @ViewData["Error"]
</p>

@if(Model.FAQVMList != null)
{
    @foreach (var item in Model.FAQVMList)
    {
        <div class="panel panel-success panel-collapse ">
            <div class="panel-heading"> <strong> @Html.DisplayFor(i => item.Question) </strong></div>
            <div class="panel-body"> @Html.DisplayFor(i => item.Solution) </div>
        </div>
    }
}